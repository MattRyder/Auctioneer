@model Auctioneer.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset your Auctioneer Password";
    Layout = "~/Views/Shared/_Account.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
  <div class="panel panel-default">
      @Html.AntiForgeryToken()
      <div class="panel-heading">
        <h2>@ViewBag.Title</h2>
      </div>

      <div class="panel-body">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
          <div class="col-xs-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Password) })
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            @Html.PasswordFor(m => m.PasswordConfirmation, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.PasswordConfirmation) })
          </div>
        </div>
      </div>

      <div class="panel-footer">
        <div class="form-group">
          <div class="col-xs-12">
            <input type="submit" class="btn btn-auctioneer" value="Reset Password" />
          </div>
        </div>
      </div>
  </div>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}